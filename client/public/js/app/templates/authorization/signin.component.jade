div.container
    form((ngSubmit)='login()')
        div.form
            h2 Enter Your Login Info
            div.alert.alert-danger(role='alert', *ngIf='error === true')
                p Invalid Credentials!

            input.form-control(type='email', placeholder='Email', [(ngModel)]='email', name='email')
            input.form-control(type='password', placeholder='Password', [(ngModel)]='password', name='password')

            input.btn.btn-primary(type='submit', value='Sign In')