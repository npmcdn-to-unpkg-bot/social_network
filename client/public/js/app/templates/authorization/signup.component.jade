div.container
    form((ngSubmit)='registerUser()')
        div.form
            h2 Enter Your Information (All Fields Required)

            div.alert.alert-danger(role='alert', *ngIf='error === true')
                p A user with that email already exists!

            input.form-control(type='text', placeholder='First Name', name='first', [(ngModel)]='firstName')
            input.form-control(type='text', placeholder='Last Name', name='last', [(ngModel)]='lastName')
            input.form-control(type='email', placeholder='Email', name='email', [(ngModel)]='email')
            input.form-control(type='password', placeholder='Password', name='pass', [(ngModel)]='password')
            input.btn.btn-primary(type='submit', value='Register')